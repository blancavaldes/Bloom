{
  "name": "bloom",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "echo 'no linter configured'"
  },
  "dependencies": {
    "connect-session-knex": "^3.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "mysql2": "^3.11.3",
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.4",
    "jest": "^29.6.1",
    "supertest": "^6.3.3"
  }

  

  ,"jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.[jt]s?(x)",
      "**/tests/**/*.test.cjs"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/public/**",
      "!src/server.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}

